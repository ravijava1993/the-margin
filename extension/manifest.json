{
  "manifest_version": 3,
  "name": "The Margin Clipper",
  "version": "1.0.0",
  "description": "Clip articles to The Margin dashboard with one click",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
